<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="#00FFFFFF" />
            <stroke android:width="3dip" android:color="#8f975d" />
            <corners android:radius="2dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape></item>
        
    <item android:state_enabled="true" android:state_focused="true">
        <shape>
            <solid android:color="#00FFFFFF" />
            <stroke android:width="3dip" android:color="#f47621" />
            <corners android:radius="2dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape></item>
        
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#00FFFFFF" />
            <corners android:radius="2dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape></item>
        
    <item android:state_enabled="true">
        <shape>
            <solid android:color="#00FFFFFF" />
            <stroke android:width="2dip" android:color="#f47621" />
            <corners android:radius="2dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape></item>

</selector>