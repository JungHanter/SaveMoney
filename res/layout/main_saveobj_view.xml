<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >


    <ImageView
        android:id="@+id/savelist_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dip"
        android:src="@android:drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/savelist_btn_increase"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:visibility="invisible"
        android:src="@drawable/btn_up_off" />

    <TextView
        android:id="@+id/savelist_edt_money"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dip"
        android:layout_toLeftOf="@+id/savelist_btn_increase"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/savelist_btn_decrease"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dip"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/savelist_edt_money"
        android:src="@drawable/btn_down_off" />

</RelativeLayout>