<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff9dd"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/passboard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >
	     
        <TextView
	        android:id="@+id/pass_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="암호잠금"
	        android:textStyle="bold"
	        android:textColor="#6d6d6d"
	        android:textSize="42dp" />
	
	    <TextView
	        android:id="@+id/pass_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="암호를 입력해 주세요."
	        android:textColor="#b4b4b4"
	        android:textSize="20dp" />
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#fff9dd"
	        android:layout_marginTop="40dip"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/passbox1"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_margin="10dp"
	            android:src="@drawable/passwordbox" />
	
	        <ImageView
	            android:id="@+id/passbox2"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_margin="10dp"
	            android:src="@drawable/passwordbox" />
	
	        <ImageView
	            android:id="@+id/passbox3"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_margin="10dp"
	            android:src="@drawable/passwordbox" />
	
	        <ImageView
	            android:id="@+id/passbox4"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_margin="10dp"
	            android:src="@drawable/passwordbox" />
	    </LinearLayout>
	        
    </LinearLayout>
    
    <TableLayout
        android:id="@+id/passboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff9dd"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/passbtn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_1"/>

            <ImageView
                android:id="@+id/passbtn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_2"/>

            <ImageView
                android:id="@+id/passbtn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_3"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff9dd"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/passbtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_4" />

            <ImageView
                android:id="@+id/passbtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_5" />

            <ImageView
                android:id="@+id/passbtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_6" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff9dd"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/passbtn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_7" />

            <ImageView
                android:id="@+id/passbtn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_8" />

            <ImageView
                android:id="@+id/passbtn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_9" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff9dd"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/keyboard_default" />

            <ImageView
                android:id="@+id/passbtn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pass_0" />

            <ImageView
                android:id="@+id/passbtndel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/delete" />
        </TableRow>
    </TableLayout>

</RelativeLayout>